{
  "intelephense.stubs": [
    "Core",
    "standard",
    "SPL",
    "Reflection",
    "date",
    "json",
    "mbstring",
    "mysql",
    "mysqli",
    "curl",
    "filter",
    "hash",
    "openssl",
    "pcre",
    "session",
    "xml",
    "xmlreader",
    "xmlwriter",
    "dom",
    "SimpleXML",
    "gd",
    "fileinfo",
    "zip",
    "zlib",
    "wordpress"
  ],
  "intelephense.environment.phpVersion": "8.5.1",
  "phpsab.snifferEnable": true,
  "phpsab.snifferMode": "onType",
  "phpsab.executablePathCS": "./wp-content/themes/theme-template/vendor/bin/phpcs",
  "phpsab.executablePathCBF": "./wp-content/themes/theme-template/vendor/bin/phpcbf",
  "phpsab.fixerEnable": true,
  "phpsab.snifferShowSources": true,
  "phpsab.standard": "./wp-content/themes/theme-template/.phpcs.xml",
  "[php]": {
    "editor.defaultFormatter": "valeryanm.vscode-phpsab",
    "editor.formatOnSave": true
  }
}
