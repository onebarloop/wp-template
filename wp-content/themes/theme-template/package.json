{
	"name": "wp-template",
	"description": "Standard template for WordPress themes",
	"author": "Alexander Bayer",
	"version": "0.0.1",
	"scripts": {
		"typecheck": "tsc --noEmit",
		"typecheck:watch": "tsc --noEmit --watch",
		"lint:php": "composer run lint .",
		"lint:js": "wp-scripts lint-js",
		"start": "wp-scripts start --webpack-src-dir=resources --output-path=public",
		"build": "wp-scripts build --webpack-src-dir=resources --output-path=public"
	},
	"devDependencies": {
		"@wordpress/scripts": "^31.1.0",
		"path": "^0.12.7",
		"typescript": "^5.9.3",
		"webpack-remove-empty-scripts": "^1.1.1"
	}
}
